<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Teks "Miyuki" di pojok kiri atas -->
    <TextView
        android:id="@+id/titleMiyuki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miyuki"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#7B1FA2"
        android:layout_gravity="start|top"
        android:padding="8dp" />

    <!-- RecyclerView di belakang (akan berada di bawah TextView karena urutan) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp" /> <!-- agar tidak tertutup oleh TextView -->

</FrameLayout>
