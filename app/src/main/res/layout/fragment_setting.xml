<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Label Miyuki di kiri atas -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miyuki"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#7B1FA2"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Kartu Pengaturan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:elevation="6dp"
            android:padding="16dp">

            <!-- Mode Gelap -->
            <LinearLayout
                android:id="@+id/layoutModeGelap"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:id="@+id/ivModeGelap"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/mode_gelap"
                    app:tint="#7B1FA2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode Gelap"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <!-- Bahasa -->
            <LinearLayout
                android:id="@+id/layoutBahasa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/bahasa"
                    app:tint="#7B1FA2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <!-- Informasi -->
            <LinearLayout
                android:id="@+id/layoutInformasi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/informasi"
                    app:tint="#7B1FA2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <!-- Rate Up -->
            <LinearLayout
                android:id="@+id/layoutRateUp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/like"
                    app:tint="#7B1FA2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate Up"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tombol Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="#7B1FA2"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableStart="@drawable/logout"
            android:drawablePadding="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
